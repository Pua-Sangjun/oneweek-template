{
    "$schema": "https://json.schemastore.org/tsconfig.json",
    "compilerOptions": {
        "target": "es5",
        "module": "esnext",
        "jsx": "react-jsx",
        "lib": ["dom", "es2017"],
        "composite": false,
        "declaration": true,
        "declarationMap": true,
        "esModuleInterop": true,
        "forceConsistentCasingInFileNames": true,
        "inlineSources": false,
        "isolatedModules": true,
        "moduleResolution": "node",
        "preserveWatchOutput": true,
        "removeComments": true,
        "skipLibCheck": true,
        "strict": true
    },
    "include": ["./src/*.tsx", "index.ts", "./typings"],
    "exclude": ["node_modules", "dist", "build"]
}
