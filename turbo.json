{
    "$schema": "https://turborepo.org/schema.json",
    "pipeline": {
        "local": {
            "dependsOn": ["^build:pkg"]
        },
        "local:template": {
            "dependsOn": ["^build:pkg"]
        },
        "build:pkg": {
            "dependsOn": ["^build:pkg"],
            "outputs": ["dist/**"]
        },
        "build": {
            "cache": false,
            "dependsOn": ["^build:pkg"],
            "outputs": ["dist/**", "next/**"]
        }
    }
}
